# =============================================================================
# BigCommerce B2B Edition API Configuration
# =============================================================================

# Store Configuration
BIGCOMMERCE_STORE_HASH=your_store_hash_here
BIGCOMMERCE_CLIENT_ID=your_client_id_here
BIGCOMMERCE_CLIENT_SECRET=your_client_secret_here

# BigCommerce API Access Token (Store API - for v2 endpoints and standard BC APIs)
BIGCOMMERCE_ACCESS_TOKEN=your_access_token_here

# B2B Edition Management API Token (for server-side B2B operations)
BIGCOMMERCE_B2B_MANAGEMENT_TOKEN=your_b2b_management_token_here

# =============================================================================
# Frontend Configuration (VITE_* variables are exposed to client)
# =============================================================================

# Store identification (used by client for API calls)
VITE_STORE_HASH=your_store_hash_here
VITE_CHANNEL_ID=1

# Optional: App Client ID for B2B Edition
VITE_LOCAL_APP_CLIENT_ID=demo_client_id

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL/Neon Database
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require
PGDATABASE=database_name
PGHOST=your_database_host
PGPORT=5432
PGUSER=database_user
PGPASSWORD=database_password

# =============================================================================
# Server Configuration
# =============================================================================

# Session secret for JWT tokens (generate a strong random string)
SESSION_SECRET=generate_a_strong_random_secret_here

# =============================================================================
# Environment Settings
# =============================================================================

# Set to TRUE for local development, FALSE for production
VITE_IS_LOCAL_ENVIRONMENT=TRUE

# Production Settings (uncomment for deployment)
# VITE_IS_LOCAL_ENVIRONMENT=FALSE
# VITE_ASSETS_ABSOLUTE_PATH=https://your-cdn-url.com/assets/
# VITE_DISABLE_BUILD_HASH=TRUE

# =============================================================================
# API Endpoints (DO NOT CHANGE - These are the official B2B Edition endpoints)
# =============================================================================

# Base URL for B2B Edition APIs (used by server only)
# GraphQL: https://api-b2b.bigcommerce.com/graphql
# Management API v3: https://api-b2b.bigcommerce.com/api/v3/io/*
# Storefront REST API v2: https://api-b2b.bigcommerce.com/api/v2/*
# NOTE: Do not include /api/v3/io in VITE_B2B_URL - it's just the base URL

# =============================================================================
# How to Get Your Credentials:
# =============================================================================
#
# 1. BIGCOMMERCE_STORE_HASH:
#    - Found in your store's control panel URL: store-{STORE_HASH}.mybigcommerce.com
#
# 2. BIGCOMMERCE_CLIENT_ID & BIGCOMMERCE_CLIENT_SECRET:
#    - Create a Store-Level API Account in BigCommerce Control Panel
#    - Settings > API > Store-level API Accounts > Create API Account
#
# 3. BIGCOMMERCE_ACCESS_TOKEN:
#    - Generated when you create the Store-Level API Account
#    - Save it immediately - it won't be shown again
#
# 4. BIGCOMMERCE_B2B_MANAGEMENT_TOKEN:
#    - Generate in B2B Edition settings
#    - B2B Edition > Settings > API > Management Token
#    - Select scopes needed for your operations
#
# 5. DATABASE_URL:
#    - If using Neon or other PostgreSQL provider, copy connection string from provider dashboard
#    - Format: postgresql://username:password@host:port/database?sslmode=require
#
# =============================================================================
